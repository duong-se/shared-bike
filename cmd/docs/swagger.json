{
    "swagger": "2.0",
    "info": {
        "description": "This is a shared bike management.",
        "title": "Shared Bike API",
        "contact": {
            "name": "Duong Pham",
            "url": "https://github.com/duong-se",
            "email": "duongpham@duck.com"
        },
        "version": "1.0"
    },
    "basePath": "/api/v1",
    "paths": {
        "/users/login": {
            "post": {
                "description": "Login by username and password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Login",
                "parameters": [
                    {
                        "description": "Login payload",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.LoginPayload"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": ""
                    },
                    "400": {
                        "description": "invalid payload",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "username or password is wrong",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/users/register": {
            "post": {
                "description": "Register by username and password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "users"
                ],
                "summary": "Register",
                "parameters": [
                    {
                        "description": "Register payload",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/domain.RegisterPayload"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": ""
                    },
                    "400": {
                        "description": "invalid payload",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "internal server error",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.LoginPayload": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string",
                    "example": "mypassword"
                },
                "username": {
                    "type": "string",
                    "example": "myusername"
                }
            }
        },
        "domain.RegisterPayload": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "myname"
                },
                "password": {
                    "type": "string",
                    "example": "mypassword"
                },
                "username": {
                    "type": "string",
                    "example": "myusername"
                }
            }
        }
    },
    "securityDefinitions": {
        "BasicAuth": {
            "type": "basic"
        }
    }
}